<%-include("partials/header")-%>
<h1><%=title%></h1>


    <p><strong>Do you really want to delete this Bookinstance?</strong></p>
    <div style='margin-left:20px;margin-top:20px'>
        <p><strong>ID: </strong><%=bookinstance._id%></p>
        <p>
            <strong>Title: </strong><a href="<%=bookinstance.book.url%>"><%=bookinstance.book.title%></a>
        </p>
        <p><strong>Imprint: </strong> <%=bookinstance.imprint%></p>
        <p>
            <strong>Status: </strong>
            <%if(bookinstance.status == "Available"){%>
                <span class="text-success"><%=bookinstance.status%></span>
           <% } else if(bookinstance.status == "Maintenace"){%>
                <span class="text-danger"><%=bookinstance.status%></span>
            <%} else{%>
                <span class="text-warning"><%=bookinstance.status%></span>
           <% } %>
        </p>
        
        <%if(bookinstance.status != "Available"){%>
            <p>
                <strong>Due back: </strong> <%=bookinstance.due_back_formatted%>
            </p>
        <%}%>
    </div>

    
    <form method="POST" action="">
        <div class="form-group">
            <input id="genreid" class="form-control" type="hidden" required= "true" value= "<%=bookinstance._id%>">
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
